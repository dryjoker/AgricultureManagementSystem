
@{
    ViewBag.Title = "農民基本資料建檔";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*https://stackoverflow.com/questions/23141854/adding-asterisk-to-required-fields-in-bootstrap-3*@

@*<style type="text/css">
        .form-group.required .control-label:after {
            content: "*";
            color: red;
        }
    </style>*@

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                農民基本資料建檔
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                            
                            <div class="form-group">
                                <label>公糧檔號</label>
                                <input class="form-control" placeholder="Enter public grain id">
                            </div>
                            <div class="form-group required">
                                <label>農民編號</label>
                                <input class="form-control" placeholder="Enter farmer id">
                            </div>
                            <div class="form-group required">
                                <label class='control-label'>農民姓名</label>
                                <input class="form-control" placeholder="Enter name">
                            </div>
                            <div class="form-group required">
                                <label class='control-label'>電話</label>
                                <input class="form-control" placeholder="Enter phone">
                            </div>
                            <div class="form-group required">
                                <label class='control-label'>手機</label>
                                <input class="form-control" placeholder="Enter cellphone">
                            </div>
                            <div class="form-group required">
                                <label class='control-label'>地址</label>
                                <input class="form-control" placeholder="Enter address">
                            </div>
                            <div class="form-group required">
                                <label class='control-label'>生日</label>
                                <input class="form-control" placeholder="Enter birthdate">
                            </div>

                            <div class="form-group">
                                <label>備註</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>

                            <div class="form-group required">
                                <label class='control-label'>專區契作戶Y/N</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="Y" checked>Y
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="N">N
                                    </label>
                                </div>
                            </div>

                            <div class="form-group required">
                                <label class='control-label'>履歷契作戶Y/N</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="Y" checked>Y
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="N">N
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-facebook">提交</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->